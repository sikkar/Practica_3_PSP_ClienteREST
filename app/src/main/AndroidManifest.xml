<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.izv.angel.appinstituto" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/izv_ico"
        android:label="@string/app_name"
        android:logo="@drawable/izv_ico"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Principal"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Aniadir"
            android:icon="@drawable/izv_ico"
            android:label="@string/title_activity_aniadir"
            android:logo="@drawable/izv_ico" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.izv.angel.appinstituto.Principal" />
        </activity>
        <activity
            android:name=".VerActividades"
            android:label="@string/title_activity_ver_actividades"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.izv.angel.appinstituto.Principal" />
        </activity>
    </application>

</manifest>
